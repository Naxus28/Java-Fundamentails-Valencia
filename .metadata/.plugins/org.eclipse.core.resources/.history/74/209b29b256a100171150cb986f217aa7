import java.util.Arrays;

public class InvalidGradeException extends Exception{
	private static final long serialVersionUID = 1L;
	private Integer[] numbers;
	
	public InvalidGradeException(){}
	
	public InvalidGradeException(Integer[] invalidNums){
		super("Array has invalid integer(s). Integer range: 0 < integer < 100." + Arrays.asList(invalidNums).toString()); // use super's message property to set and get message
		this.numbers = invalidNums;
	}

	/**
	 * @return the numbers
	 */
	public Integer[] getNumbers() {
		return numbers;
	}
	
	public void getError() {
		Integer[] numbers = this.numbers;
		StringBuilder error = new StringBuilder("InvalidGradeException: ");
		boolean hasErrors = false;
		
		for (int i=0; i < numbers.length; i++) {
			if (numbers[i] < 0 || numbers[i] > 100) {
				hasErrors = true;
				error.append("invalid number " + numbers[i] + " at index " + i + "; ");
			}
		}
		
		// check if exception was thrown correctly
		// testing for either "invalidNumbers" or "invalidIndexes" suffices
		if (!hasErrors) {
			error.append("No exception needs to be thrown. Please make sure you are throwing the exception for the right reasons.");
			
		}
		
		System.out.println(error);
	}

}
