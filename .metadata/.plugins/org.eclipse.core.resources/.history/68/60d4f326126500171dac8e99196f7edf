
public class Casino2Test {

	public static void main(String[] args) {
		Date DOB = new Date(12, 31, 1977);
		Name gabriel = new Name("Gabriel", "Augusto", "Ferraz",  "Dr. ");
		Player gabrielFerraz = new Player(gabriel, DOB, 5000);

		Date DOB1 = new Date(10, 11, 1987);
		Name josh = new Name("Josh", "", "Smith");
		Player joshSmith = new Player(josh, DOB1, 2000);

		
		// machines
		SlotMachine lucky777 = new SlotMachine("Lucky 777", 5000, 10000, 5000, 10, 5);
		SlotMachine luckyLotto = new SlotMachine("Lucky Lotto", 55000, 100000, 75000, 50, 25);
		SlotMachine purplePeopleEater = new SlotMachine("Purple People Eater", 1000, 50, 40, 5, 20);
		
		// play
		for(int i=0; i<18; i++) {
			Play play = new Play(gabrielFerraz, lucky777);
			play.showResult();
		}
		
		for(int i=0; i<5; i++) {
			Play play = new Play(joshSmith, lucky777);
			play.showResult();
		}
		
	}

}
