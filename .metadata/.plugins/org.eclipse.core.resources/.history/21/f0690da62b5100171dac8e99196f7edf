import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;

public class Casino {
	/**
	 * globals
	 */
	
	final static float quarterValue = (float) 0.25;
	int currMachine = 0;
	int totalTimesPlayed = 0;
	int mOneTotalTimesPlayed = 0;
	int mTwoTotalTimesPlayed = 0;
	int mThreeTotalTimesPlayed = 0;
	final int quartersInJar = 100;

  public static void main(String[] args) {
	  
	  

	  
	  float dollarAmount = getQuarterAmountInDollars();
	  System.out.println("dollarAmount: " + dollarAmount);
  }
  

