
public class Machine {
	private boolean on;
	private String name;
	
	public void setName(String name)
	{
		this.name = name;
	}
	
	public String getName() 
	{
		return this.name;
	}
	
	public void turnOn()
	{
		if (!on)
		{
			this.on = true;
			System.out.println("The " + this.name  + " is on");
		}
		else
		{
			System.out.println("The " + this.name  + " is already on");
		}
	}
	
	public void turnOff()
	{
		if (on)
		{
			this.on = false;
			System.out.println("The " + this.name  + " is off");
		}
		else
		{
			System.out.println("The " + this.name  + " is already off");
		}
	}
}
