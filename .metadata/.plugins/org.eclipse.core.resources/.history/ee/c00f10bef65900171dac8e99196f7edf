import java.text.SimpleDateFormat;
import java.util.Calendar;

public class AlarmClock {
	private boolean on;
	SimpleDateFormat alarmDateFormat = new SimpleDateFormat("yyyy/MM/dd HH:mm");
	AlarmClockCalendar calendar;
	Calendar currentDateTime;
	Calendar alarmDateTime;
	
	
	public AlarmClock()
	{
		calendar = new AlarmClockCalendar();
	}
	
	/**
	 * sets alarm clock date-time
	 * @param year
	 * @param month
	 * @param day
	 * @param min
	 * @param sec
	 */
	public void setAlarmDateTime(int year, int month, int day, int min)
	{
		alarmDateTime.set(year, month, day, min, 0);
		System.out.println("Alarm is set to: " + this.getAlarmTime());
	}
	
	/**
	 * gets alarm clock date-time
	 * @return
	 */
	public String getAlarmTime() 
	{
		return alarmDateFormat.format(alarmDateTime.getTime());
	}
	
	public void turnOn(boolean turnOn)
	{	
		if(!turnOn) {
			System.out.println("Please use the method 'turnOff' to turn the alarm clock off.");
			return;
		}
		else 
		{
			if(on)
			{
				System.out.println("The alarm is already on.");
				System.out.println("This is the current date-time: " + calendar.getCurrentDateTime());
				System.out.println("Alarm is set to: " + this.getAlarmTime());
			}
			else
			{
				on = true;
				System.out.println("Your alarm clock is on. You may now set your alarm time.");
			}
		}
	}
	
	public void turnOff(boolean turnOff)
	{
		if(!turnOff) {
			System.out.println("Please use the method 'turnOn' to turn the alarm clock on.");
			return;
		}
		else
		{
			if(on)
			{
				on = false;
				System.out.println("The alarm is off.");
			}
			else
			{
				System.out.println("The alarm is already off.");
			}
			
		}
	}	
	
}
