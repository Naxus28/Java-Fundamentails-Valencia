import java.text.SimpleDateFormat;
import java.util.Calendar;


public class AlarmClockCalendar {
	SimpleDateFormat sdf = new SimpleDateFormat("yyyy/MM/dd HH:mm:ss");
	Calendar calendar; 
	Calendar currentDateTime;
	Calendar alarmDateTime;
	
	/**
	 * class constructor--initializes calendar
	 */
	public AlarmClockCalendar()
	{
		calendar = Calendar.getInstance(); 
	}
	
	/**
	 * gets calendar reference
	 * @return
	 */
	public Calendar getAlarmClockCalendar()
	{
		return calendar;
	}
	
	public String getCurrentDateTime()
	{
		return sdf.format(calendar.getTime());
	}
	
	public void setAlarmDateTime(int year, int month, int day, int min, int sec)
	{
		alarmDateTime.set(year, month, day, min, sec);
	}
	
	public String getAlarmTime () 
	{
		return sdf.format(alarmDateTime.getTime());
	}
	
}
