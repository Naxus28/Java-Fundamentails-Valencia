import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;

public class Casino {
	/**
	 * globals
	 */
	
	final static float quarterValue = (float) 0.25;
	final static int quartersInJar = 100;
	static int currMachine = 1;
	static int totalTimesPlayed = 0;
	static int mOneTotalTimesPlayed = 0;
	static int mTwoTotalTimesPlayed = 0;
	static int mThreeTotalTimesPlayed = 0;

  public static void main(String[] args) {
	  
	  while(quartersInJar > 0)
	  {
		  totalTimesPlayed++;
		  quartersInJar--;
		  
		  if(currMachine == 1)
		  {
			  mOneTotalTimesPlayed++;
			  
			  if(mOneTotalTimesPlayed % 33 == 0)
			  {
				  quartersInJar+=25;
				  float amountWon = getQuarterAmountInDollars(25);
				  float dollarsInJar = getQuarterAmountInDollars(quartersInJar);
				  
				  printOutputToTxtFile(currMachine, amountWon, quartersInJar, dollarsInJar);
			  }
		  }
		  else if(currMachine == 2)
		  {
			  mTwoTotalTimesPlayed++;
			  
			  if(mTwoTotalTimesPlayed % 99 == 0)
			  {
				  quartersInJar+=75;
				  float amountWon = getQuarterAmountInDollars(75);
				  float dollarsInJar = getQuarterAmountInDollars(quartersInJar);
				  
				  printOutputToTxtFile(currMachine, amountWon, quartersInJar, dollarsInJar);
			  }
		  }
		  else if(currMachine == 3)
		  {
			  mThreeTotalTimesPlayed++;
			  
			  if(mThreeTotalTimesPlayed % 9 == 0)
			  {
				  quartersInJar+=7;
				  float amountWon = getQuarterAmountInDollars(75);
				  float dollarsInJar = getQuarterAmountInDollars(quartersInJar);
				  
				  printOutputToTxtFile(currMachine, amountWon, quartersInJar, dollarsInJar);
			  }
			  
			  currMachine = 0;
		  }
		  
		  currMachine++;
	  }
  }
  

//  static private String getUserInput(String inputDirections) {
//	System.out.println(inputDirections);
//	Scanner sc = new Scanner(System.in);
//  
//	return sc.nextLine();
//  }

  
  static private float getQuarterAmountInDollars(int quartersCount) 
  {
	  float dollarAmount = quartersCount * quarterValue;
	  return dollarAmount;
  }
  
  static private void printOutputToTxtFile(int currMachine, float amountWon, int quartersInJar, float dollarsInJar) 
  {
	  try
	  {
	    PrintWriter writer = new PrintWriter("src/casino.txt", "UTF-8");
	    writer.println("Machine: " + currMachine);
	    writer.println("Amount won: " + amountWon);
	    writer.println("Remaining quartes in jar: " + quartersInJar);
	    writer.println("Remaining dollars in jar: " + dollarsInJar);
	    writer.println("");
	    writer.println("=================");
	    writer.println("");
	    writer.close();
	  } 
	  catch (IOException e) 
	  {
	   // do something
	  }
  }
  
}




