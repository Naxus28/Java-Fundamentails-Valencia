
public class LampWithBulb {
	LightBulb bulb;
	
	public void setLightBulb(LightBulb b )
	{
		bulb = b;
	}
	
	
	public void turnOn()
	{
		if(bulb == null)
		{
			System.out.println("There is no lightbulb");
		}
		else if(bulb.isLit())
		{
			System.out.println("The lamp is already on.");
		}
	}
	
	
	

}
